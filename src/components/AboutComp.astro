---
import Security from './icons/security.astro'
import Quality from './icons/quality.astro'
import { getLangFromUrl, useTranslations } from '../i18n/utils.js';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const aboutCompany = t('aboutComp');
---

<section class="relative max-w-7xl mx-auto px-6 py-20 lg:py-28" id="about">
    
    <div class="flex flex-col lg:flex-row gap-12 lg:gap-16 items-center">
        <div class="lg:w-1/2 space-y-8 lg:pr-10">
            <div class="relative">
            <h2 class="text-4xl md:text-5xl font-bold mt-3 text-gray-900">
                {aboutCompany.h2}
                <span class="block w-16 h-1.5 bg-emerald-400 mt-4 rounded-full"></span>
            </h2>
            </div>
    
            <div class="prose prose-lg text-gray-600">
            <p class="leading-relaxed">
                {aboutCompany.pdesc}
            </p>
            
            <ul class="mt-6 space-y-3 pl-5">
                <li class="flex items-start">
                <span class="flex-shrink-0 mt-1 mr-3 text-emerald-500">â€¢</span>
                <span>{aboutCompany.p}</span>
                </li>
            </ul>
            </div>
        </div>
  
      <div class="grid sm:grid-cols-2 gap-12 h-min">
        <div class="glass-card group relative overflow-hidden rounded-2xl p-8 aspect-square w-full min-w-[280px] border border-white/10 hover:border-emerald-400/30 transition-all duration-500 hover:-translate-y-2 flex flex-col">
          <div class="absolute inset-0 bg-[url('/images/security.webp')] bg-cover opacity-20 group-hover:opacity-30 transition-opacity"></div>
          <div class="relative z-10 flex-1 flex flex-col">
            <div class="w-20 h-20 mb-8 glass-icon rounded-xl flex items-center justify-center self-start">
              <Security class="w-12 h-12 stroke-emerald-400" />
            </div>
            <div class="mt-auto space-y-4">
              <h3 class="text-2xl font-bold text-white">{aboutCompany.secT}</h3>
              <p class="text-gray-300 text-base leading-snug">{aboutCompany.secP}</p>
            </div>
          </div>
        </div>
  
        <div class="glass-card group relative overflow-hidden rounded-2xl p-8 aspect-square w-full min-w-[280px] border border-white/10 hover:border-teal-400/30 transition-all duration-500 hover:-translate-y-2 flex flex-col">
          <div class="absolute inset-0 bg-[url('/images/confort.webp')] bg-cover opacity-20 group-hover:opacity-30 transition-opacity"></div>
          <div class="relative z-10 flex-1 flex flex-col">
            <div class="w-20 h-20 mb-8 glass-icon rounded-xl flex items-center justify-center self-start">
              <Quality class="w-12 h-12 fill-teal-400" />
            </div>
            <div class="mt-auto space-y-4">  
              <h3 class="text-2xl font-bold text-white">{aboutCompany.conT}</h3>
              <p class="text-gray-300 text-base leading-snug">{aboutCompany.conP}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Ver despues donde ponerlo -->
  <style>
    .glass-card {
      background: rgba(15, 23, 42, 0.7);
      backdrop-filter: blur(16px);
      box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }
    .glass-icon {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(6px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }
  </style>